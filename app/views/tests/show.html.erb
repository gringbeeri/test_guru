<h3>/YOUR TEST/</h3>
<p>
  <strong>Title:</strong>
  <%= @test.title %>
</p>

<p>
  <strong>Level:</strong>
  <%= @test.level %>
</p>

<p>
  <%= form_with model: @test, method: :delete do |form| %>
    <strong>DO YOU WANT TO DELETE A TEST?</strong>
    <%= form.submit "DELETE", data: { confirm: "Are you sure?" } %>
  <% end %>
</p>

<table>
  <tr>
    <th>Questions:</th>
  </tr>
  <% @test.questions.each do |question| %>
    <tr>
      <td><%= question.body %></td>
    </tr>
  <% end %>
</table>

<p>
<%= link_to '| BACK ALL TESTS |', tests_path %>
<%= link_to '| EDIT TEST |', edit_test_path(@test) %>
</p>
