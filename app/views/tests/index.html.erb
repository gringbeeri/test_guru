<h2>/All TESTS/</h2>

<p>
<%= link_to '| CREATE NEW TEST |', new_test_path %>
</p>

<table>
  <tr>
    <th>Title</th>
    <th>Level</th>
    <th>Count Questions</th>
    <th colspan="5">Actions</th>
  </tr>

  <% @tests.each do |test| %>
    <tr>
      <td><%= test.title %></td>
      <td><%= test.level %></td>
      <td><%= test.questions.count %></td>
      <td><%= link_to '| CREATE USER |', signup_path %></td>
      <td><%= link_to '| SHOW |', test_path(test) %></td>
      <td><%= link_to '| EDIT |', edit_test_path(test) %></td>
      <td><%= link_to '| DELETE |',
                        test_path(test),
                        method: :delete,
                        data: { confirm: 'Are you sure?' } %></td>
      <td><%= button_to '| START |', start_test_path(test) %></td>
    </tr>
  <% end %>
</table>
