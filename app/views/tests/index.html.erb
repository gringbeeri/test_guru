<h2>/All TESTS/</h2>

<p>
<%= link_to '| CREATE NEW TEST |', new_test_path %>
</p>

<table>
  <tr>
    <th>Title</th>
    <th>Level</th>
    <th>Count Questions</th>
    <th colspan="3">Actions</th>
  </tr>

  <% @tests.each do |test| %>
    <tr>
      <td><%= test.title %></td>
      <td><%= test.level %></td>
      <td><%= test.questions.count %></td>
      <td><%= link_to '| SHOW |', test_path(test) %></td>
      <td><%= link_to '| EDIT |', edit_test_path(test) %></td>
      <td><%= link_to '| QUESTIONS |',test_questions_path(test) %></td>
    </tr>
  <% end %>
</table>
