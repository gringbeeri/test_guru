<h3>/PASSING THE <%= @test_passage.test.title %> TEST/</h3>

<p>
  <strong>Count Questions:</strong>
  <%= count_questions(@test_passage) %>
<p>

<ol start=<%= set_number_question(@test_passage) %> >
  <li> <%= @test_passage.current_question.body %> </li>
</ol>

<%= form_with url: test_passage_path(@test_passage), local: true, method: :put do |form| %>
  <%= form.collection_check_boxes :answer_ids, @test_passage.current_question.answers, :id, :body, include_hidden: false do |b| %>
    <p>
      <%= b.check_box id: "answer_ids_#{b.object.id}" %>
      <%= b.label %>
    </p>
  <% end %>

  <p><%= form.submit ' Next Question -> ' %></p>
<% end %>
